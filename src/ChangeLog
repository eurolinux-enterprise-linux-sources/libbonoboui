	* bonobo/bonobo-ui-toolbar-popup-item.c: (set_arrow_orientation),
	(bonobo_ui_toolbar_popup_item_finalize),
	(bonobo_ui_toolbar_popup_item_class_init),
	(bonobo_ui_toolbar_popup_item_init),
